{
  "name": "smartbus-frontend",
  "version": "0.1.0",
  "private": true,
  "lockfileVersion": 3,
  "type": "Next.js Application",
  "framework": "React 19 + Next.js 15",
  "styling": "Tailwind CSS",
  "language": "TypeScript",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "convert-tailwind": "node tailwind-converter.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/line-clamp": "^0.4.4",
    "clsx": "^2.0.0",
    "next": "15.5.4",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^2.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "15.5.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "features": {
    "translation": {
      "enabled": true,
      "provider": "Google Translate (Free)",
      "languages": ["en", "si", "ta", "hi", "fr", "es", "de", "zh", "ja", "ko"],
      "caching": "localStorage + memory"
    },
    "authentication": {
      "enabled": true,
      "provider": "Custom Auth",
      "roles": ["admin", "owner", "passenger", "driver"]
    },
    "state_management": {
      "library": "Zustand",
      "persistence": "localStorage"
    },
    "ui_components": {
      "icons": "Heroicons",
      "styling": "Tailwind CSS",
      "responsive": true,
      "mobile_first": true
    }
  },
  "structure": {
    "src/app": "Next.js App Router pages",
    "src/components": "Reusable UI components",
    "src/context": "React Context providers",
    "src/hooks": "Custom React hooks",
    "src/store": "Zustand state stores",
    "src/utils": "Utility functions",
    "src/types": "TypeScript type definitions",
    "src/services": "API services",
    "src/config": "Configuration files"
  },
  "build": {
    "target": "production",
    "output": "static",
    "optimization": true,
    "minification": true
  },
  "deployment": {
    "platform": "Vercel/Netlify",
    "environment": "Node.js 18+",
    "build_command": "npm run build",
    "dev_command": "npm run dev"
  }
}